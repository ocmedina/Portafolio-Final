---
import { Github, Linkedin, Mail } from "lucide-react";
const year = new Date().getFullYear();
---

<footer class="bg-slate-900 text-white border-t border-gray-700 mt-10">
  <div class="max-w-7xl mx-auto px-6 py-8 flex flex-col md:flex-row items-center justify-between gap-6 text-sm">

    <!-- Texto del copyright -->
    <p class="text-center md:text-left text-xs sm:text-sm">
      &copy; {year} <span class="font-semibold text-blue-400">Octavio Medina</span>. Todos los derechos reservados.
    </p>

    <!-- Redes sociales -->
    <div class="flex gap-5">
      <a href="https://github.com/ocmedina" target="_blank" rel="noopener noreferrer"
         class="flex items-center gap-2 hover:text-blue-500 transition-colors">
        <Github className="w-4 h-4" />
        <span class="hidden sm:inline">GitHub</span>
      </a>
      <a href="https://linkedin.com/in/octamedinadev" target="_blank" rel="noopener noreferrer"
         class="flex items-center gap-2 hover:text-blue-500 transition-colors">
        <Linkedin className="w-4 h-4" />
        <span class="hidden sm:inline">LinkedIn</span>
      </a>
      <a href="mailto:octaviomedina239@gmail.com"
         class="flex items-center gap-2 hover:text-blue-500 transition-colors">
        <Mail className="w-4 h-4" />
        <span class="hidden sm:inline">Email</span>
      </a>
    </div>
    
  </div>
</footer>
