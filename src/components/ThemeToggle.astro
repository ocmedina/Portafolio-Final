---
// Componente desactivado - solo modo oscuro
---

<button
  id="theme-toggle"
  class="fixed bottom-6 right-6 z-50 p-4 bg-gradient-to-br from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 rounded-full shadow-xl transition-all duration-300 hover:scale-110 group hidden"
  aria-label="Cambiar tema"
  title="Cambiar tema"
  disabled
>
  <!-- Icono Luna (modo oscuro) -->
  <svg
    id="theme-toggle-dark-icon"
    class="w-6 h-6 text-yellow-200 hidden transition-transform group-hover:rotate-12"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    ></path>
  </svg>

  <!-- Icono Sol (modo claro) -->
  <svg
    id="theme-toggle-light-icon"
    class="w-6 h-6 text-yellow-300 hidden transition-transform group-hover:rotate-90"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    ></path>
  </svg>
</button>

<style>
  #theme-toggle {
    backdrop-filter: blur(10px);
  }

  #theme-toggle:hover {
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.5);
  }
</style>

<script is:inline>
  const storageKey = "theme-preference";

  // Forzar modo oscuro siempre
  const setPreference = () => {
    localStorage.setItem(storageKey, "dark");
    document.documentElement.setAttribute("data-theme", "dark");
  };

  // Establecer el tema oscuro al cargar
  setPreference();
</script>
