<script>
  const roles = [
    "Desarrollador Web Full Stack",
    "Diseñador UI/UX",
    "Freelancer",
  ];
  let currentRoleIndex = 0;
  const dynamicText = document.getElementById("dynamicText");

  function typeRole(role, callback) {
    let index = 0;
    const interval = setInterval(() => {
      if (index < role.length) {
        dynamicText.textContent += role.charAt(index);
        index++;
      } else {
        clearInterval(interval);
        setTimeout(callback, 2000); // Espera 2 segundos antes de borrar
      }
    }, 100);
  }

  function deleteRole(callback) {
    const interval = setInterval(() => {
      if (dynamicText.textContent.length > 0) {
        dynamicText.textContent = dynamicText.textContent.slice(0, -1);
      } else {
        clearInterval(interval);
        callback();
      }
    }, 50);
  }

  function loopRoles() {
    typeRole(roles[currentRoleIndex], () => {
      deleteRole(() => {
        currentRoleIndex = (currentRoleIndex + 1) % roles.length;
        loopRoles();
      });
    });
  }

  loopRoles();
</script>
